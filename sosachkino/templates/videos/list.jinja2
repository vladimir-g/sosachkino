{% extends "base.jinja2" %}

{% block center %}
  <div class="row">

    <div class="col-md-2">
      <h4>Filter</h4>

      <form method="get" action="{{ url("videos") }}">

        {% if boards %}
          <div class="card">
            <div class="card-header">Boards</div>
            <div class="card-body">
              <fieldset>
                {% for board in boards %}
                  <div class="form-check">
                    <input
                      class="form-check-input"
                      type="checkbox"
                      name="board"
                      value="{{ board }}"
                      {% if board in query.get("board", []) %}
                        checked="checked"
                      {% endif %}
                      id="board-{{ board }}" />
                      <label class="form-check-label" for="board-{{ board }}">
                        /{{ board }}/
                      </label>
                  </div>
                {% endfor %}
              </fieldset>
            </div>
          </div>
          <br />
        {% endif %}

        <div class="card">
          <div class="card-body">
            <div class="btn-toolbar" role="toolbar" aria-label="Search toolbar">
              <div class="btn-group mr-2" role="group" aria-label="Search buttons">
                <button type="submit" class="btn btn-primary">Filter</button>
                <a href="{{ url("videos") }}" class="btn btn-danger">Reset</a>
              </div>
            </div>
          </div>
        </div>

      </form>

    </div>

    <div class="col-md-10">
      <br />
      <div class="row">
        {{ macros.paginator(pagination) }}
      </div>
      <div class="row">
        <div class="card-columns">

          {% for video in videos %}
            <div class="card">
              <video class="card-img-top"
                     src="{{ video.url }}"
                     poster="{{ video.thumbnail }}"
                     {% if video.type %}
                       type="{{ video.type }}"
                     {% endif %}
                     preload="none"
                     controls="controls">
                     Video couldn't be played by browser
              </video>

              <div class="card-body">
                <h5 class="card-title">{{ video["name"] }}</h5>
                <p class="card-text">
                  <small class="text-muted">{{ video.date.strftime("%d.%m.%y %H:%M:%S") }}</small>
                </p>
              </div>
            </div>
          {% endfor %}
        </div>
      </div>

      <div class="row">
        {{ macros.paginator(pagination) }}
      </div>

    </div>
  </div>

{% endblock %}
