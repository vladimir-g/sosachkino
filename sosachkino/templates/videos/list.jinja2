{% extends "base.jinja2" %}

{% block center %}
  <h1>Videos</h1>

  <div class="row">
    <div class="card-columns">

      {% for video in videos %}
        <div class="card">
          <video class="card-img-top"
                 src="{{ video.url }}"
                 poster="{{ video.thumbnail }}"
                 preload="none"
                 controls="controls">
          </video>

          <div class="card-body">
            <h5 class="card-title">{{ video["name"] }}</h5>
            <p class="card-text">
              <small class="text-muted">{{ video.date.strftime("%d.%m.%y %H:%M:%S") }}</small>
            </p>
          </div>
        </div>
      {% endfor %}

    </div>
  </div>

{% endblock %}
